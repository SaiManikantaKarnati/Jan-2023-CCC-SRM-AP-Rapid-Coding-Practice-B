C 301 : The Fainting Pok√©mon

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int maxp,rpow,n,flag=0,i;
    scanf("%d", &maxp);
    scanf("%d", &n);
    int arr[n];
    for(i=0;i<n;i++)
    {
        scanf("%d", &arr[i]);
        if(arr[i]>=maxp)
            flag=1;
    }
    if(flag==1)
    {
        printf("-1");
        return 0;
    }
    int days=0;
    
    for(i=0;i<n;)
    {
        days = days + 1;
        rpow = maxp;
        while(i<n && rpow>arr[i])
        {
            rpow = rpow - arr[i];
            i = i + 1;
        }
    }
    printf("%d",days);
    return 0;
}
